{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1 class="page-title">Messages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.Nom }}</td>
                <td>{{ contact.Email }}</td>
                <td>{{ contact.Message }}</td>
                <td>
                    <a class="btn btn-small" href="{{ path('app_contact_show', {'id': contact.id}) }}">Voir</a>
                    
                    <a href="#" class="btn btn-danger"
                        onclick="event.preventDefault(); 
                                    if(confirm('Supprimer ce message ?')) { 
                                        document.getElementById('delete-form-{{ contact.id }}').submit(); 
                                    }">
                            Supprimer
                    </a>

                    <form id="delete-form-{{ contact.id }}" method="post"
                        action="{{ path('app_contact_delete', {'id': contact.id}) }}"
                        style="display:none;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                    </form>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_contact_new') }}">Cr√©er un nouveau message</a>
{% endblock %}
