{# templates/contact_cours/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des demandes de contact{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Gestion des Demandes de Contact</h1>


        
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Message</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {# On boucle sur la variable 'demandes_cours' passée par le contrôleur #}
                {% for contact in demandes_cours %}
                    <tr>
                        <td>{{ contact.id }}</td>
                        
                        {# On utilise les propriétés comme dans votre exemple #}
                        <td>{{ contact.Nom }}</td>
                        <td>{{ contact.Email }}</td>
                        
                        {# Affiche les 50 premiers caractères du message pour la prévisualisation #}
                        <td>{{ contact.Message|slice(0, 50) }}...</td> 
                        
                        <td>
                            {# Lien pour voir le message complet (show) #}
                            <a href="{{ path('app_contact_cours_show', {'id': contact.id}) }}" class="btn btn-sm btn-info text-white">Voir</a>
                            
                            
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucune demande de contact trouvée.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        
    </div>
{% endblock %}