{% block title %}Accueil{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}
    <h2>Bienvenue sur la page d'accueil</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>NumRue</th>
                <th>Rue</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Tél</th>
                <th>Mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for eleve in eleves %}
            <tr>
                <td>{{ eleve.id }}</td>
                <td>{{ eleve.nom }}</td>
                <td>{{ eleve.prenom }}</td>
                <td>{{ eleve.numRue }}</td>
                <td>{{ eleve.rue }}</td>
                <td>{{ eleve.copos }}</td>
                <td>{{ eleve.ville }}</td>
                <td>{{ eleve.tel }}</td>
                <td>{{ eleve.mail }}</td>
                <td>
                    <a href="{{ path('app_eleve_show', {'id': eleve.id}) }}" class="btn btn-sm btn-primary">Voir</a>
                    <a href="{{ path('app_eleve_edit', {'id': eleve.id}) }}" class="btn btn-sm btn-secondary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun élève trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
