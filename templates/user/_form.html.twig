{{ form_start(form) }}

<div class="card p-4 shadow-sm" style="max-width: 700px; margin: auto;">
    
    {# On ouvre la grille principale ici #}
    <div class="row g-3">
        
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.prenom) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prenom) }}
            </div>
        </div>

        <div class="col-md-4">
            <div class="mb-3">
                {{ form_label(form.numRue) }}
                {{ form_widget(form.numRue, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.numRue) }}
            </div>
        </div>
        <div class="col-md-8">
            <div class="mb-3">
                {{ form_label(form.rue) }}
                {{ form_widget(form.rue, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.rue) }}
            </div>
        </div>

        <div class="col-md-4">
            <div class="mb-3">
                {{ form_label(form.copos) }}
                {{ form_widget(form.copos, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.copos) }}
            </div>
        </div>
        <div class="col-md-8">
            <div class="mb-3">
                {{ form_label(form.ville) }}
                {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.ville) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.tel) }}
                {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.tel) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>
        </div>

        
        {% if app.request.attributes.get('_route') == 'app_user_new' %}
            {% if form.plainPassword is defined %}
                {# On utilise col-12 pour prendre toute la largeur, mais on reste DANS la row principale #}
                <div class="col-12">
                    <div class="mb-3">
                        {{ form_label(form.plainPassword, 'Mot de passe') }}
                        {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'DÃ©finir un mot de passe'}}) }}
                        {{ form_errors(form.plainPassword) }}
                    </div>
                </div>
            {% endif %}
        {% endif %}
       

        <div class="col-12">
            <div class="mb-3">
                {{ form_label(form.roles) }}
                {{ form_widget(form.roles, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.roles) }}
            </div>
        </div>

    </div> {# Fermeture de la <div class="row g-3"> #}

    <div class="text-center mt-4">
        <button class="btn btn-success btn-lg">{{ button_label|default('Enregistrer') }}</button>
    </div>

</div> {# Fermeture de la card #}

{{ form_end(form) }}