{% extends 'base.html.twig' %}

{% block title %}Mes Paiements{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>
            {% if isAdmin %}
                Gestion des Paiements (Admin)
            {% elseif isResponsable|default(false) %}
                Paiements de mes enfants
            {% else %}
                Mes Paiements
            {% endif %}
        </h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Montant</th>
                    {# On affiche la colonne Eleve si c'est un Admin OU un Responsable #}
                    {% if isAdmin or isResponsable|default(false) %}
                        <th>Élève Concerné</th>
                    {% endif %}
                    
                    <th>Date Paiement</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for paiment in paiments %}
                <tr>
                    <td>{{ paiment.id }}</td>
                    <td>{{ paiment.montant }} €</td>
                    
                    {# Pareil ici : on affiche le nom seulement pour Admin ou Responsable #}
                    {% if isAdmin or isResponsable|default(false) %}
                        <td>
                            {{ paiment.eleve.prenom }} {{ paiment.eleve.nom }}
                        </td>
                    {% endif %}
                    
                    <td>{{ paiment.datePaiment ? paiment.datePaiment|date('d/m/Y') : '' }}</td>
                    <td>
                        <a href="{{ path('app_paiment_show', {'id': paiment.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        
                        {# Seul l'admin peut modifier #}
                        {% if isAdmin %}
                            <a href="{{ path('app_paiment_edit', {'id': paiment.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun paiement trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# Bouton de création visible seulement pour Admin ou Responsable #}
        {% if isAdmin or isResponsable|default(false) %}
            <a href="{{ path('app_paiment_new') }}" class="btn btn-primary">Nouveau Paiement</a>
        {% endif %}
    </div>
{% endblock %}