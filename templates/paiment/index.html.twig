{% extends 'base.html.twig' %}

{% block title %}Paiements{% endblock %}

{% block body %}
<div class="container">

    <!-- Carte d'accueil / résumé -->
    <div class="info-card">
        <h1 style="margin-left:350px;" class="page-title">Liste des paiements</h1>
        <p class="page-subtitle" >Sélectionnez un élève, les responsables et les cours souhaités</p>

        

    </div>
            {% if isAdmin %}
            <div class="btn-group">

                <a href="{{ path('app_paiment_new') }}" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                    </svg>
                    Créer un paiement
                </a>
            </div>
        {% endif %}

    <!-- Tableau Dashboard -->
    <div class="dashboard-table">
        <table>
            <thead>
                <tr>
                    {% if is_granted('ROLE_ELEVE') %}
                        <th></th>
                    {% endif %}
                    {% if isAdmin %}
                        <th>Id</th>
                    {% endif %}
                    <th>Montant</th>
                    {% if isAdmin %}
                        <th>Élève</th>
                    {% endif %}
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% set totalGeneral = 0 %}
                {% for paiment in paiments %}
                    {% set totalGeneral = totalGeneral + paiment.montant %}
                    <tr>
                        {% if is_granted('ROLE_ELEVE') %}
                            <td></td>
                        {% endif %}
                        {% if isAdmin %}
                            <td>{{ paiment.id }}</td>
                        {% endif %}
                        <td>{{ paiment.montant }} €</td>
                        {% if isAdmin %}
                            <td>{{ paiment.eleve.prenom }} {{ paiment.eleve.nom }}</td>
                        {% endif %}
                        <td>{{ paiment.datePaiment ? paiment.datePaiment|date('d/m/Y') : '' }}</td>
                        <td>
                            <a href="{{ path('app_paiment_show', {'id': paiment.id}) }}" class="btn btn-small">Voir</a>
                            {% if isAdmin %}
                                <a href="{{ path('app_paiment_edit', {'id': paiment.id}) }}" class="btn btn-small btn-primary">Éditer</a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="{{ isAdmin ? '5' : '4' }}" style="text-align:center; color:#666;">Pas de paiements à régulariser</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr style="font-weight: bold; background-color: #f1f3f5;">
                    <td colspan="{{ isAdmin ? '3' : '2' }}" style="text-align:right;">TOTAL GÉNÉRAL :</td>
                    <td style="color: green;">{{ totalGeneral }} €</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    </div>
    <a href="{{ path('app_dashboard') }}" class="btn btn-primary">Revenir au Tableau de bord</a>
</div>
{% endblock %}
