{% extends 'base.html.twig' %}

{% block title %}Ajouter un pr√™t d'instrument{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #e0f7fa, #ffffff);
            font-family: 'Poppins', sans-serif;
            color: #343a40;
        }

        h1 {
            text-align: center;
            margin-bottom: 25px;
            font-weight: 600;
            color: #007bff;
            letter-spacing: 0.5px;
        }

        .form-container {
            max-width: 600px;
            margin: 60px auto;
            background: #ffffff;
            padding: 40px 35px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
            opacity: 0;
            animation: fadeIn 0.6s ease forwards;
        }

        .form-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

        label {
            font-weight: 500;
            margin-bottom: 6px;
            color: #495057;
        }

        input, select, textarea {
            border-radius: 8px !important;
            border: 1px solid #ced4da;
            padding: 10px 12px;
            transition: all 0.2s ease;
            width: 100%;
        }

        input:focus, select:focus, textarea:focus {
            border-color: #007bff;
            box-shadow: 0 0 6px rgba(0,123,255,0.3);
            outline: none;
        }

        .btn-primary {
            width: 100%;
            padding: 12px;
            font-size: 1.1em;
            font-weight: 500;
            border-radius: 8px;
            border: none;
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: #fff;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0056b3, #004085);
            transform: translateY(-2px);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .alert {
            border-radius: 10px;
            font-weight: 500;
            animation: fadeIn 0.5s ease;
        }

        /* Style pour la recherche locale */
        .searchable-select {
            display: none;
        }

        .search-input {
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>üéµ Ajouter un pr√™t d'instrument</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                ‚úÖ {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                ‚ö†Ô∏è {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}

        {{ form_start(form) }}

            {# Champ de recherche √©l√®ve #}
            <div class="mb-3">
                <label for="searchEleve" class="form-label">Rechercher un √©l√®ve</label>
                <input type="text" id="searchEleve" class="form-control search-input" placeholder="Tapez un nom...">
                {{ form_widget(form.eleve, { 'attr': {'class': 'form-select searchable-select'} }) }}
            </div>

            {# Champ de recherche instrument #}
            <div class="mb-3">
                <label for="searchInstrument" class="form-label">Rechercher un instrument</label>
                <input type="text" id="searchInstrument" class="form-control search-input" placeholder="Tapez un instrument...">
                {{ form_widget(form.instrument, { 'attr': {'class': 'form-select searchable-select'} }) }}
            </div>

            {# Le reste du formulaire #}
            {{ form_rest(form) }}

            <button class="btn btn-primary mt-3">üíæ Enregistrer</button>

        {{ form_end(form) }}
    </div>

    <script>
        // Filtrage local des options dans les s√©lections
        function setupSearch(inputId, selectId) {
            const input = document.getElementById(inputId);
            const select = document.querySelector(selectId);

            input.addEventListener('input', function() {
                const search = this.value.toLowerCase();
                const options = select.querySelectorAll('option');

                select.style.display = 'block';
                options.forEach(option => {
                    const text = option.textContent.toLowerCase();
                    option.style.display = text.includes(search) ? 'block' : 'none';
                });
            });

            select.addEventListener('change', function() {
                input.value = select.options[select.selectedIndex].text;
                select.style.display = 'none';
            });
        }

        setupSearch('searchEleve', 'select[name$="[eleve]"]');
        setupSearch('searchInstrument', 'select[name$="[instrument]"]');
    </script>
{% endblock %}
