{% extends 'base.html.twig' %}

{% block title %}Ajouter un prêt d'instrument{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #343a40;
        }

        .form-container {
            max-width: 600px;
            margin: 50px auto;
            background: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: 500;
        }

        input, select, textarea {
            border-radius: 5px;
            border: 1px solid #ced4da;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            font-size: 1.1em;
            transition: background 0.3s;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>Ajouter un prêt d'instrument</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            {% for field in form %}
                <div class="form-group">
                    {{ form_label(field) }}
                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(field) }}
                </div>
            {% endfor %}
            <button type="submit" class="btn btn-primary mt-3">Enregistrer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
